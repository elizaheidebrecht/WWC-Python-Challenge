#Create a program that removes the nth element from a list.

def remove_nth(input_list):
    n = int(input("Enter the index number of the item you want to remove:"))
    
    input_list = input_list.split(',')
    
    new_list = []

    for item in input_list:
        new_list.append(item)
    del new_list[n]
    return new_list


input_list = (input("Enter a list of items separated by commas:"))
#input_list = [1,2,3,4,5,6,7]
#n = int(input("Enter the index number of the item you want to remove:"))

print(remove_nth(input_list))
